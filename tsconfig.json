{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "outDir": "./dist",
        // "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@common/*": [
                "../common/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../common/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}